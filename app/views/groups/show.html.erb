<div class="container">
  <div class="col-md-12">
    <div class="row">
      <%= link_to("Write a Post", new_group_post_path(@group), class: "btn btn-default pull-right") %>
    </div>
    <br>
      <div class="row">
      <h2>
        <%= @group.title %>
      </h2>
      </div>
      <% if current_user && current_user == @group.user %>
      <div class="row">
        <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right") %>
      </div>
      <% end %>
    <hr>
      <%= @group.description %>
  </div>
  <br><br>
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Creator</th>
          <th>Update Last</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= post.user.email %></td>
            <td><%= post.created_at.to_s(:long) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= will_paginate @posts %>
    </div>
  </div>
</div>
<hr>
