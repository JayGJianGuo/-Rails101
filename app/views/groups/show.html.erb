<div class="col-md-12">
  <div class="group">

    <%= link_to("Write a Post", new_group_post_path(@group), class: "btn btn-success pull-right") %>

    <% if current_user && current_user == @group.user %>
      <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right") %>
    <% end %>
  </div>

  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>
</div>

<div class="col-md-12">
  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Creator</th>
        <th>Create Time</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.content, group_post_path(@group, post) %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at.to_s(:long) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="apple_pagination text-center">
      <div class="page_info">
        <%= page_entries_info @posts %>
      </div>
      <%= will_paginate @posts, :container => false %>
    </div>

</div>
