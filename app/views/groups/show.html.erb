<div class="col-md-12">
  <div class="group">
    <%= link_to "Edit", edit_group_path(@group), class: "btn btn-primary pull-right" %>
    <%= link_to "Write a Post", new_group_post_path(@group), class: "btn btn-default pull-right" %>
  </div>
  <h2>
    <%= @group.title %>
  </h2>
  <p>
    <%= to_markdown(@group.description) %>
  </p>

  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Creator</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= to_markdown(post.content) %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at.to_s(:long) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
</div>
