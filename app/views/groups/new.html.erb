<div class="col-md-6 col-md-offset-3">
  <h1>New Group</h1>
  <%= form_for @group do |f| %>

  <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    </ul>
  <% end %>

  <br>
  Title
  <%= f.text_field :title %>
  <br>
  Discription
  <br>
  <%= f.text_area :description %>
  <br>
  <%= f.submit "Submit", :disable_with => "Submiting..." %>

  <% end %>
</div>
